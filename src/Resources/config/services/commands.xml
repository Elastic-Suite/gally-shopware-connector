<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Gally\ShopwarePlugin\Command\StructureSync">
            <argument type="service" id="Gally\ShopwarePlugin\Service\Configuration" />
            <argument type="service" id="sales_channel.repository" />
            <argument type="tagged_iterator" tag="gally.entity.synchronizer"/>
            <tag name="console.command"/>
        </service>
        <service id="Gally\ShopwarePlugin\Command\Index">
            <argument type="service" id="Gally\ShopwarePlugin\Service\Configuration" />
            <argument type="service" id="sales_channel.repository" />
            <argument type="tagged_iterator" tag="gally.entity.indexer"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
