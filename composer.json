{
    "name": "gally/shopware-plugin",
    "description": "Shopware connector for Gally",
    "homepage": "https://elasticsuite.io",
    "type": "shopware-platform-plugin",
    "license": "OSL-3.0",
    "version": "1.0.0",
    "extra": {
        "shopware-plugin-class": "Gally\\ShopwarePlugin\\GallyPlugin",
        "author": "Gally Team",
        "label": {
            "en-GB": "Gally Plugin",
            "de-DE": "Gally Plugin"
        },
        "description": {
            "de-DE": "Gally Plugin fÃ¼r Shopware",
            "en-GB": "Gally Plugin for Shopware"
        }
    },
    "require": {
        "php": ">= 7.2",
        "gally/gally-php-rest-sdk": "~1.0.1",
        "shopware/core": "^6.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.3.4",
        "phpstan/phpstan": "^0.12.18",
        "shopware/core": "*",
        "shopware/storefront": "*"
    },
    "autoload": {
        "psr-4": {
            "Gally\\ShopwarePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gally\\ShopwarePlugin\\Tests\\": "tests/"
        }
    },
    "repositories": {
        "elastic-suite/gally-php-rest-sdk": {
            "type": "git",
            "url": "git@github.com:Elastic-Suite/gally-php-rest-sdk.git"
        }
    }
